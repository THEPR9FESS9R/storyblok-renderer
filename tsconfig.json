{
    "compilerOptions": {
        "skipLibCheck": true,
        "isolatedModules": true,
        "target": "es6",
        "module": "esnext",
        "lib": ["ESNext", "DOM"],
        "types": ["vite/client"],
        "noImplicitAny": true,
        "preserveSymlinks": true,
        "sourceMap": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "moduleResolution": "node",
        "baseUrl": "./",
        "outDir": "./dist",
        "jsx": "preserve"
    },
    "include": ["src/**/*.ts", "src/**/*.vue", "**/*.svg", "server.mjs"]
}
